{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
      {
        "name": "alexa-layouts",
        "version": "1.0.0"
      }
    ],
    "resources": [
      {
        "strings": {
          "skillName": "skill-secretaria-joana-nodejs",
          "directions": "Please link your account in the Alexa app."
        }
      }
    ],
    "styles": {
      "centered": {
        "values": {
          "textAlign": "center",
          "paddingTop": "${viewport.height * 0.05}",
          "paddingBottom": "${viewport.height * 0.05}"
        }
      },
      "title": {
        "extend": [
          "centered"
        ],
        "values": {
          "fontSize": 48
        }
      },
      "directions": {
        "extend": [
          "centered"
        ],
        "values": {
          "fontSize": 36
        }
      }
    },
    "mainTemplate": {
      "parameters": [
        "payload"
      ],
      "items": [
        {
          "height": "${viewport.height}",
          "type": "Container",
          "alignItems": "center",
          "justifyContent": "center",
          "items": [
            {
              "type": "Image",
              "source": "https://undercontrol.blob.core.windows.net/alexa/mateus.jpeg",
              "position": "absolute",
              "width": "100vw",
              "height": "100vh",
              "scale": "best-fill" 
            }
          ]
        }
      ]
    }
  }